<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_config_settings_inherit_advance_account" model="ir.ui.view">
        <field name="name">sale.config.settings.inherit.advance.account</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='account_digitalization']" position="after">
                <block title="Advance Payment" id="advance_payment">
                    <setting string="Advance Payment Account:">
                        <div class="content-group">
                            <div class="row mt8">
                                <label for="advance_account_id" class="col-lg-4 o_light_label" string="Account"/>
                                <field name="advance_account_id"/>
                            </div>
                        </div>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>