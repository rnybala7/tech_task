<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_discount" model="ir.ui.view">
        <field name="name">sale.order.form.discount</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <header position="inside">
                <button name="action_reapply_discount"
                        type="object"
                        string="Reapply Discount"
                        class="oe_highlight"
                        invisible="state in ('sale', 'cancel')"
                        />
            </header>
            <xpath expr="//page[@name='other_information']/group" position="inside">
                <group string="Discount Rule Info">
                    <field name="applied_discount_rule_id" options="{'no_create': True}" readonly="1"/>
                    <field name="discount_percent" readonly="1"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>