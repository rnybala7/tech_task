<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_advance_payment" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.advance.payment</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet//group" position="after">
                <group>
                    <group string="Advance Payment">
                        <field name="advance_payment" readonly="state in ('sale', 'cancel')" />
                        <field name="advance_entry_id" readonly="1" invisible="advance_entry_id == False"/>
                    </group>
                </group>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_advance_entry"
                        string="Advance Payment"
                        type="object"
                        icon="fa-book"
                        invisible="advance_entry_id == False"/>
            </xpath>
        </field>
    </record>
</odoo>